<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shawnocked.androidproject1.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="48sp"
        android:background="@color/yellow"
        android:text="BaseConverter"
        android:id="@+id/textView"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/NumberInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/enter_a_number"
                android:textColorHighlight="@color/highlight"
                android:inputType="text" />

            <EditText
                android:id="@+id/BaseFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NumberInput"
                android:layout_centerHorizontal="true"
                android:hint="@string/enter_the_base_for_this_number"
                android:inputType="text" />

            <EditText
                android:id="@+id/BaseTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BaseFrom"
                android:layout_centerHorizontal="true"
                android:hint="@string/enter_a_base_for_conversion"
                android:inputType="text" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/button"
                android:layout_below="@+id/BaseTo"
                android:layout_centerHorizontal="true"
                android:onClick="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/output"
                android:layout_below="@id/button"
                android:text="@string/the_answer_is_calculating"
                android:textAlignment="center"/>

        </RelativeLayout>


    </LinearLayout>






</RelativeLayout>

